<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="PartyPalApp.MVVM.Views.TabbedPages"
            xmlns:local="clr-namespace:PartyPalApp"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackgroundColor="Red"
            UnselectedTabColor="White"
            SelectedTabColor="Black"
            BarTextColor="White"
            android:TabbedPage.IsSwipePagingEnabled="False">


    <local:EventHomePage Title="Evenementen" IconImageSource="event.png" x:Name="eventPage"/>
    <local:ReviewPage Title="Reviews" IconImageSource="review.png" x:Name="reviewPage"/>
    <local:MainPage  Title="Home" IconImageSource="home.png" x:Name="homePage"/>
    <local:MapPage Title="Plattegrond" IconImageSource="map.png" x:Name="mapPage"/>
    <local:SettingsPage Title="Instellingen" IconImageSource="settings.png" x:Name="settingPage"/>

</TabbedPage>